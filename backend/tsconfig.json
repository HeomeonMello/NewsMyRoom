{
  "compilerOptions": {
    "allowJs": true,                           // JavaScript 파일 허용
    "checkJs": false,                          // JavaScript 파일 타입 검사 비활성화 (필요시 true로 설정)
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
